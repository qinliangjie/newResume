@import "/style/guide.wxss";

.container{
  display: flex;
}
.edit_bg{
  width: 100%;
  height: 500rpx;
  margin-bottom: 120rpx
}
.bg_img{
  width: 100%;
  height: 500rpx
}
.edit_text{
  position: absolute;
  right: 50rpx;
  top: 450rpx;
  font-size: 13px;
  color: #666
}
.head_{
  position: absolute;
  width: 150rpx;
  height: 150rpx;
  border-radius: 150rpx;
  left: 60rpx;
  top: 425rpx;
  background-color: white
}
.head_img{
  width: 140rpx;
  height:140rpx;
  left: 5rpx;
  top: 5rpx;
  position: absolute;
  z-index: 1;
  border-radius: 140rpx
}
.head_mark{
  width: 140rpx;
  height:140rpx;
  left: 5rpx;
  top: 5rpx;
  position: absolute;
  z-index: 2;
  text-align: center;
  border-radius: 140rpx;
  background-color: rgba(0, 0, 0, .5)
}
.head_i{
  line-height: 140rpx;
  font-size: 25px;
  color: white
}

.edit_list{
  width: 90%;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  border-bottom:1px solid rgba(0, 0, 0, .1);
  margin-bottom: 50rpx;
  padding-bottom: 5rpx
}
.edit_list .left_part{
  font-size: 15px;
  color: #666;
  width: 170rpx;
}
.edit_list .right_part{
  font-size: 15px;
  color: #333;
  flex-grow:1;
}
.edit_list .right_part textarea{
  max-height: 80rpx;
  width: inherit
}
.edit_list .right_part .picker{
  width:300rpx;
  height:45rpx;
}